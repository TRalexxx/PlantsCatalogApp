<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlantsCatalogApp"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:viewmodel="clr-namespace:PlantsCatalogApp.ViewModel" 
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" 
        xmlns:view="clr-namespace:PlantsCatalogApp.View" 
        x:Class="PlantsCatalogApp.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1000" 
        d:DataContext="{d:DesignInstance Type={x:Type viewmodel:MainVM}}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
     TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal"
     TextOptions.TextRenderingMode="Auto"
     Background="{DynamicResource MaterialDesignPaper}"
     FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid Background="#FF1E1E1E">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBox Margin="5,0,0,0" Width="180" VerticalAlignment="Center"  materialDesign:HintAssist.Hint="Enter keywords for search"  Style="{StaticResource MaterialDesignFloatingHintTextBox}" Foreground="#DDEDEDED" />
            <Button  Width="auto" Content="_Search" IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}}"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                    ToolTip="Search plant" />
        </StackPanel>

        <Grid Grid.Column="1" Grid.Row="1" ScrollViewer.CanContentScroll="True" DataContext="{Binding SelectedPlant}" mah:ScrollViewerHelper.IsHorizontalScrollWheelEnabled="True" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image x:Name="plantPhoto" Width="250" Height="250" Source="{Binding PhotoUri}"/>
                <StackPanel Grid.Column="1">
                    <TextBox  VerticalAlignment="Top"  materialDesign:HintAssist.HelperText="LocalName" Margin="0,5"
                        Style="{StaticResource MaterialDesignFilledTextBox}" TextWrapping="Wrap" Foreground="#DDEFEFEF" FontSize="18" Text="{Binding LocalName, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBox  VerticalAlignment="Top"  materialDesign:HintAssist.HelperText="ScientName" TextWrapping="Wrap" Margin="0,5"
                        Style="{StaticResource MaterialDesignFilledTextBox}" Foreground="#DDEFEFEF" FontSize="18" Text="{Binding ScientName, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBox  VerticalAlignment="Top"  materialDesign:HintAssist.HelperText="GrowingArea" TextWrapping="Wrap" Margin="0,5"
                        Style="{StaticResource MaterialDesignFilledTextBox}" Foreground="#DDEFEFEF" FontSize="18" Text="{Binding GrowingArea, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </Grid>
            <StackPanel Grid.Row="1">
                <TextBox Padding="5" VerticalAlignment="Stretch"  materialDesign:HintAssist.Hint="Description" AcceptsReturn="True"
                    SpellCheck.IsEnabled="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Foreground="#FFEFEFEF" FontSize="14" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Padding="5" VerticalAlignment="Stretch"  materialDesign:HintAssist.Hint="Positive effects" AcceptsReturn="True"
                    SpellCheck.IsEnabled="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Foreground="#FFEFEFEF" FontSize="14" Text="{Binding PositiveEffects, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox Padding="5" VerticalAlignment="Stretch"  materialDesign:HintAssist.Hint="Negatice effects" AcceptsReturn="True"
                    SpellCheck.IsEnabled="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Foreground="#FFEFEFEF" FontSize="14" Text="{Binding NegativeEffects, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </Grid>

        <ListBox Grid.Row="1" ItemsSource="{Binding Plants}" Foreground="#FFEFEFEF" SelectedItem="{Binding SelectedPlant}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <view:PlantPreviewControl LocalName="{Binding Path=LocalName}" ScientName="{Binding Path=ScientName}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
